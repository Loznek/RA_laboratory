  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Planet {
  id        String  @id @default(cuid())
  name      String  @default("")
  residents Race[]  @relation("Planet_residents")
  jediFrom  Jedi[]  @relation("Jedi_birthPlanet")
  natives   Race[]  @relation("Race_origin_planet")
  surface   String?
}

model Jedi {
  id            String  @id @default(cuid())
  name          String  @default("")
  birthPlanet   Planet? @relation("Jedi_birthPlanet", fields: [birthPlanetId], references: [id])
  birthPlanetId String? @map("birthPlanet")
  race          Race?   @relation("Jedi_race", fields: [raceId], references: [id])
  raceId        String? @map("race")
  birthYear     Int?
  master        Jedi?   @relation("Jedi_master", fields: [masterId], references: [id])
  masterId      String? @map("master")
  padawans      Jedi[]  @relation("Jedi_master")
  lightSaber    String?

  @@index([birthPlanetId])
  @@index([raceId])
  @@index([masterId])
}

model Race {
  id               String   @id @default(cuid())
  name             String   @unique @default("")
  origin_planet    Planet?  @relation("Race_origin_planet", fields: [origin_planetId], references: [id])
  origin_planetId  String?  @map("origin_planet")
  occupied_planets Planet[] @relation("Planet_residents")
  from_Jedi_race   Jedi[]   @relation("Jedi_race")

  @@index([origin_planetId])
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}
